{
    "name": "pevnt",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "npx cross-env NODE_ENV=test mocha",
        "wtest": "npx cross-env NODE_ENV=test mocha --watch --no-timeout",
        "coverage": "nyc npm test",
        "dev": "npx cross-env NODE_ENV=development ts-node --transpile-only -r ts-node/register -r tsconfig-paths/register ./src/Main.ts",
        "dev2": "npx cross-env NODE_ENV=development node --watch -r ts-node/register -r tsconfig-paths/register ./src/Main.ts",
        "item": "npx cross-env NODE_ENV=development ts-node --transpile-only -r ts-node/register -r tsconfig-paths/register ./src/RunItem.ts",
        "call": "npx cross-env NODE_ENV=development ts-node --transpile-only -r ts-node/register -r tsconfig-paths/register ./src/RunCall.ts",
        "main": "npx cross-env NODE_ENV=development tsx --tsconfig ./tsconfig.json ./src/Main.ts",
        "check": "tsx watch --tsconfig ./tsconfig.json ./src/Check.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "esmock": "^2.7.1",
        "ps-node": "^0.1.6",
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@types/chai": "^5.2.2",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.0.14",
        "@types/sinon": "^17.0.4",
        "chai": "^5.2.1",
        "cross-env": "^7.0.3",
        "mocha": "^11.7.1",
        "nyc": "^17.1.0",
        "sinon": "^21.0.0",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.20.3",
        "typescript": "^5.9.2"
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "**/*.ts"
        ],
        "exclude": [
            "**/*.d.ts",
            "**/domain/timers/Delay.ts"
        ],
        "reporter": [
            "html"
        ],
        "all": true,
        "branches": 80,
        "lines": 80,
        "functions": 80,
        "statements": 80
    }
}
