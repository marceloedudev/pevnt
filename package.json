{
    "name": "pevnt",
    "version": "1.0.1",
    "description": "Command runner and consumer abstraction",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --dts",
        "test:unit": "npx cross-env NODE_ENV=test mocha test/unit/**/*.spec.ts",
        "test:e2e:memory": "npx cross-env NODE_ENV=test mocha test/e2e/memory/**/*.spec.ts",
        "test:e2e:cli": "npx cross-env NODE_ENV=development mocha test/e2e/cli/**/*.spec.ts",
        "coverage": "nyc npm test",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "consumer",
        "child_process",
        "worker_threads",
        "typescript",
        "nodejs"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/marceloedudev/pevnt.git"
    },
    "bugs": {
        "url": "https://github.com/marceloedudev/pevnt/issues"
    },
    "homepage": "https://github.com/marceloedudev/pevnt#readme",
    "dependencies": {
        "acmdp": "^1.0.1",
        "ps-node": "^0.1.6",
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@types/chai": "^5.2.2",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.0.14",
        "@types/sinon": "^17.0.4",
        "chai": "^5.2.1",
        "cross-env": "^7.0.3",
        "mocha": "^11.7.1",
        "nyc": "^17.1.0",
        "sinon": "^21.0.0",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "tsup": "^8.5.0",
        "tsx": "^4.20.3",
        "typescript": "^5.9.2"
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "**/*.ts"
        ],
        "exclude": [
            "**/*.d.ts",
            "**/domain/timers/Delay.ts",
            "**/infra/eventbus/memory/*",
            "examples/*"
        ],
        "reporter": [
            "html"
        ],
        "all": true,
        "branches": 80,
        "lines": 80,
        "functions": 80,
        "statements": 80
    }
}
